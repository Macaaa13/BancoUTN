<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:textStyle="bold"
        android:text="Simular plazo fijo"
        android:textSize="@dimen/tituloTamaño" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/utn_logo" />

        <TextView
            android:id="@+id/tituloDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banco UTN Santa Fe"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/subtituloTamaño" />

    </LinearLayout>

    <TextView
        android:id="@+id/persona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:textSize="15sp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tasaNominalLabel"
            android:layout_width="@dimen/label_medium_size"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:text="Tasa nominal anual"
            android:textSize="@dimen/bodyTamaño" />

        <EditText
            android:id="@+id/tasaNominalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tasaEfectivaLabel"
            android:layout_width="@dimen/label_medium_size"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:text="Tasa efectiva anual"
            android:textSize="@dimen/bodyTamaño" />

        <EditText
            android:id="@+id/tasaEfectivaInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/capitalInvertirLabel"
            android:layout_width="@dimen/label_medium_size"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:text="Capital a Invertir($)"
            android:textSize="@dimen/bodyTamaño" />

        <EditText
            android:id="@+id/capitalInvertirInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="12"
        android:progress="12"

        android:layout_marginHorizontal="25sp" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Con renovación automática"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Simulador plazo fijo en "
        />

    <TextView
        android:id="@+id/meses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meses: 12 meses"
        />
    <TextView
        android:id="@+id/plazo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plazo: 30 días"
        />

    <TextView
        android:id="@+id/tipoMoneda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de moneda: " />

    <TextView
        android:id="@+id/capital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capital: $ "

        />
    <TextView
        android:id="@+id/intereses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intereses ganados: $ "
        />
    <TextView
        android:id="@+id/montoTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monto total: $ "
        />
    <TextView
        android:id="@+id/montoAnual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monto total anual: $ "
        />

    <Button
        android:id="@+id/confirmarBoton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/center"
        android:layout_marginTop="25sp"
        android:backgroundTint="@color/dark_gray"
        android:enabled="false"
        android:text="Confirmar"
        />

</LinearLayout>